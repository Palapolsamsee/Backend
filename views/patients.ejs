<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patients</title>
</head>
<body>
    <h1>Patients</h1>
    <a href="/patients/new">Add New Patient</a>
    <a href="/medications/new">Add New Medication</a>
    <ul>
        <% patients.forEach(patient => { %>
            <li>
                <h2><%= patient.name %></h2>
                <ul>
                    <% patient.medications.forEach(medication => { %>
                        <li>
                            <strong><%= medication.name %></strong> - <%= medication.dosage %>
                            <ul>
                                <% medication.schedule.forEach(schedule => { %>
                                    <li><%= schedule.time %> - <%= schedule.notes %></li>
                                <% }) %>
                            </ul>
                        </li>
                    <% }) %>
                </ul>
            </li>
        <% }) %>
    </ul>
</body>
</html>
